<%- include('../partials/header.ejs')%>
<div id = "tradedesc">
<h3><%= item.title%></h3>
<img class = "CasualImage" src="https://upload.wikimedia.org/wikipedia/commons/e/e9/Man_wearing_green_shirt-jacket%2C_blue_jeans_and_desert_boots_01.jpg" alt="casual image">
<p> <strong> Category:</strong><i>&nbsp; <%= item.category%></i></p>
<p><strong> Details:</strong><i>&nbsp;<%= item.details%></i></p>
<p><strong> Price:</strong><i>&nbsp; <%= item.price%></i></p>
<p><strong> Size:</strong><i>&nbsp; <%= item.size%></i></p>
<br>
<div id="tradebutton">
    <% if(user == item.author._id) {%>
    <form>
        <button class="editbuttons" type="submit" formmethod="GET" formaction="/items/<%= item.id %>/editItem">Edit</button>
        <button class="deletebuttons" type="submit" formmethod="POST" formaction="/items/<%= item.id %>?_method=DELETE">Delete</button>
    </form>
    <%}%>
    <form>
        <% if(user != item.author._id) {%>
        <% if(!item.watched){%>
        <button class="tradebuttons" type="submit" formmethod="POST" formaction="/items/<%=item.id%>/watch">Watch</button>
        <%}else{%>
        <button class="tradebuttons" type="submit" formmethod="POST" formaction="/items/<%= item.id %>/unwatch?_method=DELETE">Unwatch</button> 
        <%}%> 
        <%if(item.status === "Available"){%>
        <button class="tradebuttons" type="submit" formmethod="POST" formaction="/items/<%= item.id%>/trade">Trade</button>
        <%}%>
        <%}%>
    </form>
</div>
</div>
<%- include('../partials/footer.ejs')%>
